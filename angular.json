{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": "b099f279-11e9-4c66-b929-305424c2e05d"
  },
  "newProjectRoot": "projects",
  "projects": {
    "dark-heresy": {
      "projectType": "application",
      "schematics": {
        "@ngneat/spectator:spectator-component": {
          "styleext": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/bazel:build",
          "options": {
            "targetLabel": "//src:prodapp",
            "bazelCommand": "build"
          },
          "configurations": {
            "production": {
              "targetLabel": "//src:prodapp"
            }
          }
        },
        "serve": {
          "builder": "@angular/bazel:build",
          "options": {
            "targetLabel": "//src:devserver",
            "bazelCommand": "run",
            "watch": true
          },
          "configurations": {
            "production": {
              "targetLabel": "//src:prodserver"
            }
          }
        },
        "test": {
          "builder": "@angular/bazel:build",
          "options": {
            "bazelCommand": "test",
            "targetLabel": "//src:test"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ],
            "typeCheck": true,
            "format": "codeFrame"
          },
          "configurations": {
            "dev": {
              "fix": true,
              "force": true
            },
            "ci": {
              "fix": false,
              "force": false
            }
          }
        },
        "server": {
          "builder": "@angular-builders/custom-webpack:server",
          "options": {
            "customWebpackConfig": {
              "path": "./scripts/webpack/custom-webpack-server.config.js",
              "replaceDuplicatePlugins": false
            },
            "outputPath": "dist/server",
            "main": "src/main.server.ts",
            "tsConfig": "src/tsconfig.server.json",
            "stylePreprocessorOptions": {
              "includePaths": [
                "./src/assets/styles/"
              ]
            }
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/dh-environment.ts",
                  "with": "src/environments/server/dh-environment-server.production.ts"
                },
                {
                  "replace": "src/manifest.json",
                  "with": "src/manifests/manifest.production.json"
                },
                {
                  "replace": "src/robots.txt",
                  "with": "src/seo/robots/robots.production.txt"
                }
              ],
              "bundleDependencies": true,
              "sourceMap": false,
              "optimization": {
                "scripts": false,
                "styles": true
              }
            }
          }
        }
      }
    }
  },
  "defaultProject": "dark-heresy"
}
